<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/calculatorlogo"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Percentage calculator"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:backgroundTint="@color/blue"/>

        <EditText
            android:id="@+id/En1"
            android:layout_width="400dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:paddingLeft="60dp"
            android:hint="Enter subject 1 mark"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>


        <EditText
            android:id="@+id/En2"
            android:layout_width="400dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:paddingLeft="60dp"
            android:hint="Enter subject 2 mark"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <EditText
            android:id="@+id/En3"
            android:layout_width="400dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:paddingLeft="60dp"
            android:hint="Enter subject 3 mark"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <EditText
            android:id="@+id/En4"
            android:layout_width="400dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:paddingLeft="60dp"
            android:hint="Enter subject 4 mark"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <EditText
            android:id="@+id/En5"
            android:layout_width="400dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:paddingLeft="60dp"
            android:hint="Enter subject 5 mark"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>


        <Button
            android:id="@+id/calculatebtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/showresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:text=""/>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            android:layout_marginTop="65dp"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
        </com.google.android.gms.ads.AdView>












    </LinearLayout>

 
</ScrollView>